<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Real Time Products</title>
    <style>
      body { font-family: Arial, sans-serif; background-color: #f4f4f4; color:
      #333; margin: 0; padding: 20px; } h1 { text-align: center; font-size:
      36px; color: #4CAF50; margin-bottom: 30px; text-transform: uppercase; }
      #contenedorProductos { display: flex; flex-wrap: wrap; justify-content:
      center; gap: 20px; margin-bottom: 40px; } h2 { font-size: 28px; color:
      #333; margin-bottom: 20px; } form { background-color: white; padding:
      20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 500px; margin: 0 auto; } form input, form select, form button {
      width: calc(100% - 22px); padding: 10px; margin: 10px 0; border-radius:
      5px; border: 1px solid #ccc; font-size: 16px; box-sizing: border-box; }
      form input:focus, form select:focus, form button:focus { outline: none;
      border-color: #4CAF50; } form button { background-color: #4CAF50; color:
      white; border: none; cursor: pointer; transition: background-color 0.3s; }
      form button:hover { background-color: #45a049; } form button:active {
      background-color: #3e8e41; } .navbar { position: fixed; top: 0; width:
      100%; background-color: #333; display: flex; justify-content: center;
      padding: 10px 0; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); z-index: 1000;
      } .nav-button { background-color: #f4f4f4; color: #333; border: none;
      padding: 10px 20px; margin: 0 10px; border-radius: 4px; cursor: pointer;
      transition: background-color 0.3s ease-in-out; } .nav-button:hover {
      background-color: #ddd; } h1 { text-align: center; color: #333;
      margin-bottom: 40px; }
    </style>
  </head>
  <body>
    <nav class="navbar">
      <button
        class="nav-button"
        onclick="window.location.href='/'"
      >Home</button>

      <button
        class="nav-button"
        onclick="window.location.href='/products'"
      >Products</button>
      <button
        id="cartButton"
        class="nav-button"
        onclick="navigateToCart()"
      >Carrito</button>
    </nav>
    <div>
      <img src="" alt="" />
    </div>

    <h1 style="margin-top: 5rem;">Real Time Products</h1>

    <div id="contenedorProductos"></div>

    <div style="display: flex; align-items:center; justify-content:center"><h2
      >Formulario para agregar Productos</h2></div>

    <form>
      <input type="text" id="title" placeholder="Título" />
      <input type="text" id="description" placeholder="Descripción" />
      <input type="number" id="price" placeholder="Precio" />
      <input type="text" id="img" value="Sin Imagen" />
      <input type="text" id="code" placeholder="Código" />
      <input type="number" id="stock" placeholder="Stock" />
      <input type="text" id="category" placeholder="Categoría" />
      <select id="status">
        <option value="true">Activo</option>
        <option value="false">Inactivo</option>
      </select>
      <button type="button" id="btnEnviar">Agregar Producto</button>
    </form>

    <script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
    <script src="js/main.js"></script>
    <script>
    function navigateToCart() {
      const cartId = localStorage.getItem('cartId'); // Recupera el cartId de localStorage
      if (cartId) {
        window.location.href = `/carts/${cartId}`; // Redirige a la URL del carrito
      } else {
        alert('No hay ningún carrito disponible.'); // Mensaje si no hay cartId
      }
    }
  </script>

  </body>
</html>